<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.flashcardapp.controller.LoginController">
    <padding>
        <Insets bottom="30.0" left="60.0" right="60.0" top="30.0" />
    </padding>
    <children>
        <VBox alignment="CENTER" maxWidth="520.0" minWidth="400" prefWidth="460.0" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 25, 0, 0, 6);">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <StackPane>
                    <children>
                        <Text fill="#8e62a6" strokeType="OUTSIDE" strokeWidth="0.0" text="Đăng nhập">
                            <font>
                                <Font name="Times New Roman Bold" size="40.0" />
                            </font>
                        </Text>
                    </children>
                </StackPane>

                <VBox spacing="20.0">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Tên đăng nhập:">
                                    <font>
                                        <Font name="Times New Roman" size="20.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="usernameField" prefHeight="50.0" promptText="Nhập tên đăng nhập" style="-fx-background-radius: 10;">
                                    <font>
                                        <Font name="Times New Roman" size="16.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox spacing="10.0">
                            <children>
                                <Label text="Mật khẩu:">
                                    <font>
                                        <Font name="Times New Roman" size="20.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField" onAction="#handleLogin" prefHeight="50.0" promptText="Nhập mật khẩu" style="-fx-background-radius: 10;">
                                    <font>
                                        <Font name="Times New Roman" size="16.0" />
                                    </font>
                                </PasswordField>
                            </children>
                        </VBox>

                        <Label fx:id="loginErrorLabel" textFill="#e74c3c" wrapText="true" visible="false">
                            <font>
                                <Font name="Times New Roman Italic" size="14.0" />
                            </font>
                        </Label>

                        <Button defaultButton="true" maxWidth="Infinity" onAction="#handleLogin" prefHeight="55.0" style="-fx-background-color: #8E62A6; -fx-background-radius: 12; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(142, 98, 166, 0.4), 10, 0, 0, 3);" text="Đăng nhập" textFill="WHITE">
                            <font>
                                <Font name="Times New Roman Bold" size="20.0" />
                            </font>
                        </Button>

                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword" text="Quên mật khẩu?" textFill="#8e62a6">
                                    <font>
                                        <Font name="Times New Roman Italic" size="16.0" />
                                    </font>
                                </Hyperlink>

                                <HBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label text="Chưa có tài khoản?">
                                            <font>
                                                <Font name="Times New Roman" size="16.0" />
                                            </font>
                                        </Label>
                                        <Hyperlink onAction="#goToRegister" text="Đăng ký ngay" textFill="#8e62a6">
                                            <font>
                                                <Font name="Times New Roman Bold" size="16.0" />
                                            </font>
                                        </Hyperlink>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>