<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.flashcardapp.controller.LoginController">
   <padding>
      <Insets bottom="30.0" left="60.0" right="60.0" top="30.0" />
   </padding>
   <children>
      <VBox alignment="CENTER" maxWidth="520.0" minWidth="400" prefWidth="460.0" spacing="30.0" style="-fx-background-color: white;                          -fx-background-radius: 20;                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 25, 0, 0, 6);" StackPane.alignment="TOP_CENTER">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <StackPane prefHeight="120.0" prefWidth="120.0">
               <children>
                  <Label />
                  <Circle fill="WHITESMOKE" radius="67.0" stroke="#cfd8dc" strokeType="INSIDE" strokeWidth="2.0" />
               </children>
            </StackPane>

                        <Label fx:id="loginErrorLabel" minHeight="20" style="-fx-font-size: 13; -fx-font-weight: 500;" text="" textFill="#e74c3c" wrapText="true" />
            <HBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tên đăng nhập ">
                     <font>
                        <Font name="Times New Roman" size="22.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <TextField fx:id="usernameField" prefHeight="43.0" prefWidth="354.0" promptText="Nhập tên đăng nhập" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-font-size: 15; -fx-padding: 0 15;" />
            <HBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Mật khẩu ">
                     <font>
                        <Font name="Times New Roman" size="22.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <PasswordField fx:id="passwordField" onAction="#handleLogin" prefHeight="50" promptText="Nhập mật khẩu" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-font-size: 15; -fx-padding: 0 15;" />
            <HBox prefHeight="0.0" prefWidth="0.0" />

                        <Button defaultButton="true" maxWidth="Infinity" onAction="#handleLogin" prefHeight="55" prefWidth="398.0" style="-fx-background-color: #8E62A6; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(102, 126, 234, 0.4), 10, 0, 0, 3);" text="Đăng nhập" />
            <Hyperlink onAction="#handleForgotPassword" style="-fx-font-size: 15; -fx-text-fill: #667eea; -fx-font-weight: 500;" text="Quên mật khẩu?">
               <font>
                  <Font />
               </font>
            </Hyperlink>
         </children>
      </VBox>
   </children>
</StackPane>
