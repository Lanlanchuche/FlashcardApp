<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="699.0" prefWidth="1054.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.flashcardapp.controller.ForgotPasswordController">
    <children>
        <VBox alignment="CENTER" maxWidth="520.0" minWidth="400.0" prefWidth="460.0" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 25, 0, 0, 6);">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <StackPane prefHeight="80.0">
                    <children>
                        <Label text="Đặt lại mật khẩu">
                            <font>
                                <Font name="Times New Roman Bold" size="40.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>

                <VBox spacing="40.0">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Tên đăng nhập:">
                                    <font>
                                        <Font name="Times New Roman" size="20.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="usernameField" prefHeight="40.0" promptText="Nhập tên đăng nhập của bạn" style="-fx-background-radius: 10;">
                                    <font>
                                        <Font name="Times New Roman" size="15.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox spacing="10.0">
                            <children>
                                <Label text="Mật khẩu mới:">
                                    <font>
                                        <Font name="Times New Roman" size="20.0" />
                                    </font>
                                </Label>
                                <StackPane>
                                    <children>
                                        <TextField fx:id="passwordTextField" managed="false" prefHeight="40.0" promptText="Nhập mật khẩu mới" style="-fx-background-radius: 10;" visible="false">
                                            <font>
                                                <Font name="Times New Roman" size="15.0" />
                                            </font>
                                        </TextField>
                                        <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Nhập mật khẩu mới" style="-fx-background-radius: 10;">
                                            <font>
                                                <Font name="Times New Roman" size="15.0" />
                                            </font>
                                        </PasswordField>
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>

                        <VBox spacing="10.0">
                            <children>
                                <Label text="Nhập lại mật khẩu:">
                                    <font>
                                        <Font name="Times New Roman" size="20.0" />
                                    </font>
                                </Label>
                                <StackPane>
                                    <children>
                                        <TextField fx:id="confirmTextField" managed="false" prefHeight="40.0" promptText="Nhập lại mật khẩu" style="-fx-background-radius: 10;" visible="false">
                                            <font>
                                                <Font name="Times New Roman" size="15.0" />
                                            </font>
                                        </TextField>
                                        <PasswordField fx:id="confirmPasswordField" prefHeight="40.0" promptText="Nhập lại mật khẩu" style="-fx-background-radius: 10;">
                                            <font>
                                                <Font name="Times New Roman" size="15.0" />
                                            </font>
                                        </PasswordField>
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>

                        <CheckBox fx:id="showPasswordCheckbox" mnemonicParsing="false" onAction="#handleShowPassword" text="Hiện mật khẩu">
                            <font>
                                <Font name="Times New Roman" size="15.0" />
                            </font>
                        </CheckBox>

                        <VBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNext" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #8E62A6; -fx-background-radius: 20;" text="Xác nhận" textFill="WHITE">
                                    <font>
                                        <Font name="Times New Roman Bold" size="20.0" />
                                    </font>
                                </Button>
                                <Hyperlink fx:id="backLink" onAction="#handleBack" text="Quay lại">
                                    <font>
                                        <Font name="Times New Roman" size="18.0" />
                                    </font>
                                </Hyperlink>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="30.0" left="60.0" right="60.0" top="30.0" />
    </padding>
</StackPane>