<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            styleClass="root"
            stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.flashcardapp.controller.RegisterController">
    <children>
        <Label layoutX="150.0" layoutY="20.0" styleClass="title-label" text="FLASHCARD LEARNING">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Label layoutX="225.0" layoutY="60.0" text="Đăng ký tài khoản" textFill="WHITE">
            <font>
                <Font name="System Italic" size="16.0" />
            </font>
        </Label>

        <VBox layoutX="150.0" layoutY="95.0" prefWidth="300.0" spacing="10.0">
            <children>
                <Label text="Tên đăng nhập:" textFill="WHITE" />
                <TextField fx:id="usernameField" promptText="Tối thiểu 3 ký tự" styleClass="text-field" />

                <Label text="Mật khẩu:" textFill="WHITE" />
                <PasswordField fx:id="passwordField" promptText="Tối thiểu 4 ký tự" styleClass="text-field" />

                <Label text="Xác nhận mật khẩu:" textFill="WHITE" />
                <PasswordField fx:id="confirmPasswordField" promptText="Nhập lại mật khẩu" styleClass="text-field" />
            </children>
        </VBox>

        <Label fx:id="messageLabel" alignment="CENTER" layoutX="150.0" layoutY="310.0" prefWidth="300.0" textFill="#ffeb3b" wrapText="true">
            <font>
                <Font name="System Italic" size="13.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" layoutX="150.0" layoutY="345.0" prefWidth="300.0" spacing="20.0">
            <children>
                <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="40.0" prefWidth="120.0" styleClass="primary-button" text="ĐĂNG KÝ" />
                <Button fx:id="backToLoginButton" onAction="#handleBackToLogin" prefHeight="40.0" prefWidth="120.0" styleClass="secondary-button" text="QUAY LẠI" />
            </children>
        </HBox>
    </children>
</AnchorPane>