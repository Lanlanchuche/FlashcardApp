<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #e8eaf0);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.flashcardapp.controller.RandomTestController">
    <children>

        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #8E62A6; -fx-padding: 12 20;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button mnemonicParsing="false" onAction="#backToTestMenu" style="-fx-background-color: rgba(255, 255, 255, 0.25); -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 12; -fx-padding: 7 14;" text="← Quay lại" />
                <Label text="KIỂM TRA NGẪU NHIÊN" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="20.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" spacing="8.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="scoreLabel" style="-fx-background-color: rgba(255, 255, 255, 0.25); -fx-text-fill: white; -fx-padding: 7 14; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 13;" text="Điểm: 0/0" />
                    </children>
                </HBox>
            </children>
        </HBox>


        <VBox alignment="TOP_CENTER" spacing="0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
            <children>

                <VBox alignment="TOP_CENTER" maxWidth="480.0" spacing="15.0" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                    <children>

                        <VBox alignment="CENTER" spacing="6.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12 20;">
                            <children>
                                <Label fx:id="progressLabel" style="-fx-text-fill: #8E62A6; -fx-font-size: 13; -fx-font-weight: bold;" text="Câu 1/10" />
                                <ProgressBar fx:id="progressBar" prefHeight="7.0" prefWidth="420.0" progress="0.1" style="-fx-accent: #8E62A6;" />
                            </children>
                            <effect>
                                <DropShadow offsetY="3.0" radius="8.0" width="16.0">
                                    <color>
                                        <Color opacity="0.06" />
                                    </color>
                                </DropShadow>
                            </effect>
                        </VBox>


                        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 30 25;" VBox.vgrow="ALWAYS">
                            <children>
                                <Label fx:id="questionTypeLabel" style="-fx-text-fill: #95a5a6; -fx-font-size: 11; -fx-font-weight: bold; -fx-letter-spacing: 1;" text="NGHĨA CỦA TỪ SAU LÀ GÌ?" />

                                <Label fx:id="questionLabel" alignment="CENTER" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #8E62A6;" text="Loading..." textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font name="Segoe UI Bold" size="28.0" />
                                    </font>
                                </Label>


                                <TextField fx:id="answerField" alignment="CENTER" onAction="#submitAnswer" promptText="Nhập câu trả lời..." style="-fx-font-size: 16; -fx-padding: 12; -fx-background-radius: 10; -fx-border-color: #8E62A6; -fx-border-width: 2; -fx-border-radius: 10;">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </TextField>


                                <VBox fx:id="multipleChoicePane" alignment="CENTER" spacing="10.0" visible="false">
                                    <children>
                                        <Button fx:id="optionButton1" mnemonicParsing="false" onAction="#selectOption1" prefHeight="48.0" prefWidth="420.0" style="-fx-background-color: #f5f7fa; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 0 18; -fx-border-color: #d5dce5; -fx-border-width: 2; -fx-border-radius: 10;" text="Option 1" wrapText="true">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="optionButton2" mnemonicParsing="false" onAction="#selectOption2" prefHeight="48.0" prefWidth="420.0" style="-fx-background-color: #f5f7fa; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 0 18; -fx-border-color: #d5dce5; -fx-border-width: 2; -fx-border-radius: 10;" text="Option 2" wrapText="true">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="optionButton3" mnemonicParsing="false" onAction="#selectOption3" prefHeight="48.0" prefWidth="420.0" style="-fx-background-color: #f5f7fa; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 0 18; -fx-border-color: #d5dce5; -fx-border-width: 2; -fx-border-radius: 10;" text="Option 3" wrapText="true">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </VBox>


                                <VBox fx:id="wordScramblePane" alignment="CENTER" spacing="15.0" visible="false">
                                    <children>
                                        <Label style="-fx-text-fill: #95a5a6; -fx-font-size: 11; -fx-font-weight: bold; -fx-letter-spacing: 1;" text="SẮP XẾP LẠI CÁC CHỮ CÁI SAU:" />
                                        <Label fx:id="scrambledLabel" alignment="CENTER" style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #8E62A6; -fx-letter-spacing: 3px;" text="SCRAMBLED" textAlignment="CENTER" />
                                        <TextField fx:id="unscrambleField" alignment="CENTER" onAction="#submitAnswer" promptText="Nhập từ đã sắp xếp..." style="-fx-font-size: 16; -fx-padding: 12; -fx-background-radius: 10; -fx-border-color: #8E62A6; -fx-border-width: 2; -fx-border-radius: 10;">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <Label fx:id="feedbackLabel" style="-fx-font-size: 14; -fx-font-weight: bold;" text="" textFill="#27ae60" visible="false" />
                            </children>
                            <effect>
                                <DropShadow offsetY="6.0" radius="15.0" width="30.0">
                                    <color>
                                        <Color opacity="0.1" />
                                    </color>
                                </DropShadow>
                            </effect>
                        </VBox>


                        <HBox alignment="CENTER" spacing="12.0">
                            <children>
                                <Button fx:id="submitButton" defaultButton="true" mnemonicParsing="false" onAction="#submitAnswer" prefHeight="44.0" prefWidth="160.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 11; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" text="✓ Trả lời">
                                    <effect>
                                        <DropShadow offsetY="3.0" radius="6.0" width="12.0">
                                            <color>
                                                <Color red="0.153" green="0.682" blue="0.376" opacity="0.3" />
                                            </color>
                                        </DropShadow>
                                    </effect>
                                </Button>
                                <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextQuestion" prefHeight="44.0" prefWidth="160.0" style="-fx-background-color: #8E62A6; -fx-text-fill: white; -fx-background-radius: 11; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" text="Tiếp theo →" visible="false">
                                    <effect>
                                        <DropShadow offsetY="3.0" radius="6.0" width="12.0">
                                            <color>
                                                <Color red="0.556" green="0.384" blue="0.651" opacity="0.3" />
                                            </color>
                                        </DropShadow>
                                    </effect>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
