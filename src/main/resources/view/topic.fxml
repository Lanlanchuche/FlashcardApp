<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="711.0" prefWidth="773.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.flashcardapp.controller.AddTopicController" >
   <children>
      <VBox alignment="CENTER" maxWidth="520.0" minWidth="400.0" prefWidth="460.0" spacing="80.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 25, 0, 0, 6);" StackPane.alignment="CENTER">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hãy đặt tên chủ đề! ">
               <font>
                  <Font name="Times New Roman" size="30.0" />
               </font>
            </Text>
            <TextField fx:id="topicNameField" prefHeight="53.0" prefWidth="394.0" promptText="Tên chủ đề " style="-fx-background-radius: 20;">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </TextField>
            <javafx.scene.layout.HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="55.0" prefWidth="180.0" style="-fx-background-radius: 20; -fx-background-color: #95a5a6; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 8, 0, 0, 2);" text="Quay lại" textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="continueButton" mnemonicParsing="false" onAction="#addTopicName" prefHeight="55.0" prefWidth="180.0" style="-fx-background-radius: 20; -fx-background-color: #8E62A6; -fx-effect: dropshadow(three-pass-box, rgba(102, 126, 234, 0.4), 10, 0, 0, 3);" text="Tiếp theo" textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
            </javafx.scene.layout.HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="150.0" left="150.0" right="150.0" top="150.0" />
   </padding>
</StackPane>
