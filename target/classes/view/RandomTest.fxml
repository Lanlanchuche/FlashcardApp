<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.flashcardapp.controller.RandomTestController">
    <children>
        <VBox alignment="CENTER" maxHeight="800.0" maxWidth="550.0" minHeight="600.0" minWidth="400.0" prefWidth="500.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 25, 0, 0, 6);" StackPane.alignment="CENTER">
            <padding>
                <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
            </padding>
            <children>
                <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #8E62A6; -fx-background-radius: 12; -fx-padding: 15 20;">
                    <children>
                        <Label text="KIỂM TRA NGẪU NHIÊN" textFill="WHITE" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Segoe UI Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="scoreLabel" style="-fx-background-color: rgba(255, 255, 255, 0.25); -fx-text-fill: white; -fx-padding: 6 12; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 12;" text="Điểm: 0/0" />
                    </children>
                </HBox>

                <VBox alignment="TOP_CENTER" spacing="12.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER" spacing="4.0">
                            <children>
                                <Label fx:id="progressLabel" style="-fx-text-fill: #8E62A6; -fx-font-size: 13; -fx-font-weight: bold;" text="Câu 1/10" />
                                <ProgressBar fx:id="progressBar" prefHeight="7.0" prefWidth="440.0" progress="0.1" style="-fx-accent: #8E62A6;" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="14.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 22;" VBox.vgrow="ALWAYS">
                            <children>
                                <Label fx:id="questionTypeLabel" style="-fx-text-fill: #95a5a6; -fx-font-size: 11; -fx-font-weight: bold; -fx-letter-spacing: 1;" text="NGHĨA CỦA TỪ SAU LÀ GÌ?" />

                                <Label fx:id="questionLabel" alignment="CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #8E62A6;" text="Loading..." textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Label>

                                <!-- Answer Field -->
                                <TextField fx:id="answerField" alignment="CENTER" onAction="#submitAnswer" promptText="Nhập câu trả lời..." style="-fx-font-size: 15; -fx-padding: 11; -fx-background-radius: 10; -fx-border-color: #8E62A6; -fx-border-width: 2; -fx-border-radius: 10;">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </TextField>

                                <VBox fx:id="multipleChoicePane" alignment="CENTER" spacing="9.0" visible="false">
                                    <children>
                                        <Button fx:id="optionButton1" mnemonicParsing="false" onAction="#selectOption1" prefHeight="45.0" prefWidth="420.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 0 18; -fx-border-color: #d5dce5; -fx-border-width: 2; -fx-border-radius: 10;" text="Option 1" wrapText="true">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="optionButton2" mnemonicParsing="false" onAction="#selectOption2" prefHeight="45.0" prefWidth="420.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 0 18; -fx-border-color: #d5dce5; -fx-border-width: 2; -fx-border-radius: 10;" text="Option 2" wrapText="true">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="optionButton3" mnemonicParsing="false" onAction="#selectOption3" prefHeight="45.0" prefWidth="420.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 0 18; -fx-border-color: #d5dce5; -fx-border-width: 2; -fx-border-radius: 10;" text="Option 3" wrapText="true">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </VBox>

                                <VBox fx:id="wordScramblePane" alignment="CENTER" spacing="12.0" visible="false">
                                    <children>
                                        <Label style="-fx-text-fill: #95a5a6; -fx-font-size: 11; -fx-font-weight: bold; -fx-letter-spacing: 1;" text="SẮP XẾP LẠI CÁC CHỮ CÁI SAU:" />
                                        <Label fx:id="scrambledLabel" alignment="CENTER" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #8E62A6; -fx-letter-spacing: 3px;" text="SCRAMBLED" textAlignment="CENTER" />
                                        <TextField fx:id="unscrambleField" alignment="CENTER" onAction="#submitAnswer" promptText="Nhập từ đã sắp xếp..." style="-fx-font-size: 15; -fx-padding: 11; -fx-background-radius: 10; -fx-border-color: #8E62A6; -fx-border-width: 2; -fx-border-radius: 10;">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <Label fx:id="feedbackLabel" style="-fx-font-size: 13; -fx-font-weight: bold;" text="" textFill="#27ae60" visible="false" />

                                <HBox alignment="CENTER" spacing="12.0">
                                    <VBox.margin>
                                        <Insets top="6.0" />
                                    </VBox.margin>
                                    <children>
                                        <Button fx:id="submitButton" defaultButton="true" mnemonicParsing="false" onAction="#submitAnswer" prefHeight="42.0" prefWidth="155.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 11; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" text=" Trả lời">
                                            <effect>
                                                <DropShadow offsetY="3.0" radius="6.0" width="12.0">
                                                    <color>
                                                        <Color red="0.153" green="0.682" blue="0.376" opacity="0.3" />
                                                    </color>
                                                </DropShadow>
                                            </effect>
                                        </Button>
                                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextQuestion" prefHeight="42.0" prefWidth="155.0" style="-fx-background-color: #8E62A6; -fx-text-fill: white; -fx-background-radius: 11; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" text="Tiếp theo" visible="false">
                                            <effect>
                                                <DropShadow offsetY="3.0" radius="6.0" width="12.0">
                                                    <color>
                                                        <Color red="0.556" green="0.384" blue="0.651" opacity="0.3" />
                                                    </color>
                                                </DropShadow>
                                            </effect>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>



                <Button mnemonicParsing="false" onAction="#backToTestMenu" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #E0E0E0; -fx-background-radius: 10; -fx-cursor: hand;" text="Quay lại">
                    <font>
                        <Font name="Times New Roman Bold" size="16.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="30.0" left="60.0" right="60.0" top="30.0" />
    </padding>
</StackPane>
