<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


  <StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.flashcardapp.controller.RegisterController">
      <padding>
          <Insets bottom="30" left="60" right="60" top="30" />
      </padding>
      <children>
          <VBox alignment="CENTER" maxWidth="520" minWidth="400" prefWidth="460" spacing="50.0" style="-fx-background-color: white;                              -fx-background-radius: 20;                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 25, 0, 0, 6);">
              <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
              </padding>
              <children>
            <StackPane>
               <children>
                          <Label text="Đăng ký tài khoản">
                     <font>
                        <Font name="Times New Roman Bold" size="40.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </StackPane>

                        <!-- Register form -->
                  <VBox fillWidth="true" spacing="30.0">
                      <children>
                          <!-- Username field -->
                          <VBox spacing="15.0">
                              <children>
                                  <Label text="Tên đăng nhập">
                           <font>
                              <Font name="Times New Roman" size="15.0" />
                           </font>
                        </Label>
                                  <TextField fx:id="usernameField" prefHeight="45" promptText="Nhập tên đăng nhập (tối thiểu 3 ký tự)" style="-fx-background-color: #f8f9fa;                                                          -fx-background-radius: 10;                                                          -fx-border-color: #e0e0e0;                                                          -fx-border-radius: 10;                                                          -fx-border-width: 1;                                                          -fx-font-size: 14;                                                          -fx-padding: 0 15;" />
                              </children>
                          </VBox>

                                      <!-- Email field -->
                          <VBox spacing="15.0">
                              <children>
                                  <Label text="Email">
                           <font>
                              <Font name="Times New Roman" size="15.0" />
                           </font>
                        </Label>
                                  <TextField fx:id="emailField" prefHeight="45" promptText="Nhập địa chỉ email (vd: user@example.com)" style="-fx-background-color: #f8f9fa;                                                          -fx-background-radius: 10;                                                          -fx-border-color: #e0e0e0;                                                          -fx-border-radius: 10;                                                          -fx-border-width: 1;                                                          -fx-font-size: 14;                                                          -fx-padding: 0 15;" />
                              </children>
                          </VBox>

                                      <!-- Password field -->
                          <VBox spacing="15.0">
                              <children>
                                  <Label text="Mật khẩu">
                           <font>
                              <Font name="Times New Roman" size="15.0" />
                           </font>
                        </Label>
                                  <PasswordField fx:id="passwordField" prefHeight="45" promptText="Nhập mật khẩu (tối thiểu 6 ký tự)" style="-fx-background-color: #f8f9fa;                                                              -fx-background-radius: 10;                                                              -fx-border-color: #e0e0e0;                                                              -fx-border-radius: 10;                                                              -fx-border-width: 1;                                                              -fx-font-size: 14;                                                              -fx-padding: 0 15;" />
                              </children>
                          </VBox>

                                      <!-- Confirm Password field -->
                          <VBox spacing="15.0">
                              <children>
                                  <Label text="Xác nhận mật khẩu">
                           <font>
                              <Font name="Times New Roman" size="15.0" />
                           </font>
                        </Label>
                                  <PasswordField fx:id="confirmPasswordField" onAction="#handleRegister" prefHeight="45" promptText="Nhập lại mật khẩu" style="-fx-background-color: #f8f9fa;                                                              -fx-background-radius: 10;                                                              -fx-border-color: #e0e0e0;                                                              -fx-border-radius: 10;                                                              -fx-border-width: 1;                                                              -fx-font-size: 14;                                                              -fx-padding: 0 15;" />
                              </children>
                          </VBox>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
      
                                      <!-- Register button -->
                                <Button defaultButton="true" maxWidth="Infinity" onAction="#handleRegister" prefHeight="50" style="-fx-background-color: #8E62A6; -fx-background-radius: 12; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(240, 147, 251, 0.4), 10, 0, 0, 3);" text="Đăng ký" textFill="WHITE">
                           <font>
                              <Font name="Times New Roman Bold" size="20.0" />
                           </font>
                        </Button>
                                  <Hyperlink alignment="CENTER" onAction="#goToLogin" text="Hỗ trợ thêm thông tin " textAlignment="CENTER">
                           <font>
                              <Font name="Times New Roman" size="15.0" />
                           </font>
                        </Hyperlink>
                     </children>
                  </VBox>
                      </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                  </VBox>
              </children>
          </VBox>
      </children>
  </StackPane>
